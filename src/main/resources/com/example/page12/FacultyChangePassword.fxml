<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.page12.FacultyChangePasswordPageController" stylesheets="@Changepwd.css">
    <top>
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="46.0" prefWidth="367.0" text="Change Password" textAlignment="CENTER" BorderPane.alignment="CENTER">
            <font>
                <Font size="30.0" />
            </font>
            <BorderPane.margin>
                <Insets top="10.0" />
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" prefHeight="58.0" prefWidth="700.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="34.0" prefWidth="280.0" text="Enter old password            :" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="23.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="70.0" top="20.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="tfOldPassword">
                            <font>
                                <Font size="20.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="10.0" top="18.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER" prefHeight="71.0" prefWidth="700.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label prefHeight="34.0" prefWidth="280.0" text="Enter new password           :" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="23.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="70.0" top="10.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="tfNewPassword">
                            <font>
                                <Font size="20.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="10.0" top="8.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                    <VBox.margin>
                        <Insets bottom="15.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER" prefHeight="56.0" prefWidth="700.0">
                    <children>
                        <Label text="Confirm new password      :" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="23.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="70.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="tfConfirmPassword">
                            <font>
                                <Font size="20.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="15.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label fx:id="hiddenLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="212.0" text="Error! Please try again." textAlignment="CENTER" textFill="#ec0404" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="20.0" />
                            </font>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER" prefHeight="88.0" prefWidth="700.0">
                    <children>
                        <Button fx:id="btnSave" alignment="CENTER" contentDisplay="CENTER" focusTraversable="false" mnemonicParsing="false" onAction="#savePassword" prefHeight="43.0" prefWidth="77.0" text="SAVE" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="20.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button focusTraversable="false" mnemonicParsing="false" onAction="#back" text="Back">
                            <HBox.margin>
                                <Insets right="630.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
